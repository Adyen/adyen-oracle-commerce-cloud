{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.7.2",
    "babel-eslint": "^10.0.3",
    "babel-preset-es2015-rollup": "^3.0.0",
    "chokidar": "^3.0.2",
    "concurrently": "^4.1.1",
    "coveralls": "^3.0.9",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "husky": ">=1",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "lint-staged": ">=8",
    "nock": "^11.7.0",
    "node-fetch": "^2.6.0",
    "prettier": "^1.19.1",
    "rollup": "^1.19.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "testcafe": "^0.23.3"
  },
  "scripts": {
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "bootstrap:production": "lerna bootstrap -- --production",
    "watch": "lerna run --parallel watch",
    "deploy:client": "./scripts/client/zip-and-deploy.sh",
    "deploy:server": "./scripts/server/zip-and-deploy.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverage",
    "postinstall": "lerna bootstrap",
    "lint": "eslint ./packages/**/*.js",
    "lint:fix": "eslint --fix ./packages/**/*.js",
    "test:e2e": "testcafe chrome './e2e/tests' -e -q",
    "test:e2e:headless": "testcafe chrome:headless './e2e/tests' -e -q"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}
